<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:src="@drawable/ic_all_inclusive"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>

        <ImageView
            android:src="@drawable/ic_happy"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>

        <ImageView
            android:src="@drawable/ic_sunny"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_menu"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:text="OlÃ¡, Kotlin"/>

    <TextView
        android:id="@+id/text_phrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Motivation"
        android:padding="16dp"
        android:gravity="center"
        />
    
    <View
        android:layout_width="128dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:layout_below="@+id/text_phrase"/>
    
    <Button
        android:layout_width="wrap_content"
        android:text="Nova frase"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>